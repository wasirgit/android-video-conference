<?xml version="1.0" encoding="utf-8"?><merge xmlns:android="http://schemas.android.com/apk/res/android">							<LinearLayout			android:id="@+id/ll"			android:layout_height="fill_parent"			android:layout_width="fill_parent"			android:background="#446"			android:visibility="visible"			android:orientation="vertical"		>			<my.video.stream.CamView 			android:id="@+id/cam"			android:layout_height="fill_parent"			android:layout_width="fill_parent"			android:layout_weight="1"			/>						<ImageView			android:id="@+id/lpimg"			android:layout_width="fill_parent"			android:layout_height="fill_parent"			android:layout_weight="1"			android:src="@drawable/close"			android:scaleType="fitXY"			/>										</LinearLayout>		<RelativeLayout	android:layout_width="fill_parent"    android:layout_height="wrap_content"	android:background="#AA000000"	android:layout_gravity="bottom"    android:paddingTop="8dip"	>			<ImageView			android:id="@+id/close"			android:src="@drawable/close"			android:layout_width="wrap_content"			android:layout_height="wrap_content"			android:layout_alignParentRight="true"			android:clickable="true"			android:layout_marginLeft="2dip"			android:layout_marginBottom="4dip">		</ImageView>		<ImageView			android:id="@+id/minimize"			android:src="@drawable/minimize"			android:layout_width="wrap_content"                			android:layout_height="wrap_content"			android:clickable="true"			android:layout_marginBottom="4dip"			android:layout_toLeftOf="@+id/close"        >		</ImageView>		<ImageView			android:id="@+id/play"			android:src="@drawable/play"			android:layout_width="wrap_content"			android:layout_height="wrap_content"			android:clickable="true"			android:layout_alignParentLeft="true"			android:layout_marginBottom="4dip">		</ImageView>		<ImageView			android:id="@+id/stop"			android:src="@drawable/stop"			android:layout_width="wrap_content"			android:layout_height="wrap_content"						android:clickable="true"			android:layout_toRightOf="@+id/play"			android:layout_marginLeft="2dip"			android:layout_marginBottom="4dip"		>		</ImageView>		<ImageView			android:id="@+id/pause"			android:src="@drawable/pause"			android:layout_width="wrap_content"			android:layout_height="wrap_content"						android:clickable="true"			android:layout_toRightOf="@+id/stop"			android:layout_marginLeft="3dip"			android:layout_centerVertical="false"		>		</ImageView>		<ImageView			android:id="@+id/text"			android:src="@drawable/text"			android:layout_width="wrap_content"			android:layout_height="wrap_content"						android:clickable="true"			android:layout_toRightOf="@+id/pause"			android:layout_marginLeft="3dip"			android:layout_centerVertical="false"		>		</ImageView>	</RelativeLayout></merge>